{
  "name": "Cardmarket Wants Lists Helper",
  "description": "A extension to help with managing Magic: The Gathering wants lists on Cardmarket.",
  "version": "1.2.0",
  "manifest_version": 3,
  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "https://www.cardmarket.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.cardmarket.com/*/Magic/Wants/*"
      ],
      "exclude_matches": [
        "https://www.cardmarket.com/*/Magic/Wants/*/AddDeckList*"
      ],
      "js": [
        "wantsCopyUtils.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://www.cardmarket.com/*/Magic/Wants/*/AddDeckList"
      ],
      "js": [
        "wantsAddUtils.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "utils/parser.js",
        "utils/toast.js",
        "utils/cachedFetch.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}